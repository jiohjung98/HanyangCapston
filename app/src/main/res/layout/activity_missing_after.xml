<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DogRegisterEndActivity">

    <View
        android:id="@+id/logo"
        android:layout_width="189dp"
        android:layout_height="119dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/background" />

    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="146dp"
        android:background="@drawable/background1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/go_next_btn"
        android:layout_marginBottom="120dp"/>

    <TextView
        android:id="@+id/dog_register_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력하신 정보를 등록 중이에요"
        android:textColor="#574444"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintTop_toTopOf="@id/background" />

    <TextView
        android:id="@+id/dog_register_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠시만 기다려주세요"
        android:textColor="#574444"
        android:textSize="13dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toBottomOf="@+id/dog_register_text1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_next_btn"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/agree_nextbtn_color"
        android:gravity="center"
        android:enabled="true"
        android:text="다음으로 이동"
        android:textColor="#FFF3E5"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>