<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/real"
            android:textSize="22sp"
            android:layout_marginTop="16sp"
            android:text="권한이 필요합니다."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150sp"/>


        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:background="@drawable/location_permission"
            android:layout_marginEnd="35sp"
            app:layout_constraintEnd_toEndOf="@+id/text11"
            app:layout_constraintTop_toTopOf="@+id/location_text"
            app:layout_constraintBottom_toBottomOf="@+id/location_text" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="위치"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/real"
            android:textColor="@color/black"
            android:layout_marginStart="35sp"
            app:layout_constraintStart_toStartOf="@+id/text11"
            app:layout_constraintTop_toBottomOf="@+id/text11"
            android:layout_marginTop="30sp"/>


        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:background="@drawable/folder"
            android:layout_marginEnd="30sp"
            app:layout_constraintEnd_toEndOf="@+id/text11"
            app:layout_constraintTop_toTopOf="@+id/file_text"
            app:layout_constraintBottom_toBottomOf="@+id/file_text"/>

        <TextView
            android:id="@+id/file_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="저장소"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/real"
            android:textColor="@color/black"
            android:layout_marginStart="30sp"
            app:layout_constraintStart_toStartOf="@+id/text11"
            app:layout_constraintTop_toBottomOf="@+id/location_text"
            android:layout_marginTop="20sp"/>

        <android.widget.Button
            android:id="@+id/permission_agree_btn"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:enabled="true"
            android:background="@drawable/next_btn_color"
            android:text="동의하기"
            android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>