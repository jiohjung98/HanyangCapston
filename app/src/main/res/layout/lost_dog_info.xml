<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_frame"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/layout"
            app:layout_constraintTop_toTopOf="@+id/layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="정보 입력" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            app:layout_constraintStart_toStartOf="@+id/Dialog_title"
            app:layout_constraintTop_toBottomOf="@+id/Dialog_title"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="반려견 이름을 입력해주세요."
            android:textSize="16sp"
            android:background="@drawable/info_edittext_rounded_corner_rectangle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_title" />

        <TextView
            android:id="@+id/breed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="견종"
            app:layout_constraintStart_toStartOf="@+id/name_input"
            app:layout_constraintTop_toBottomOf="@+id/name_input"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/breed_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/dogbreed_search"
            android:maxLength="10"
            android:textSize="16sp"
            android:textColorHint="@color/google_login"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            app:iconifiedByDefault="false"
            app:queryHint="견종을 선택해주세요."
            app:searchIcon="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:translationZ="91dp"
            android:outlineProvider="none"
            app:layout_constraintTop_toBottomOf="@+id/breed_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/breed_recycle"
            android:layout_width="380dp"
            android:layout_height="210dp"
            android:background="@drawable/dogbreed_searchbox"
            android:outlineProvider="none"
            android:paddingBottom="1dp"
            android:scrollbarFadeDuration="0"
            android:translationZ="90dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@id/breed_input"
            app:layout_constraintTop_toTopOf="@id/breed_input" />

        <TextView
            android:id="@+id/time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"
            app:layout_constraintStart_toStartOf="@+id/breed_input"
            app:layout_constraintTop_toBottomOf="@+id/breed_input"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <EditText
            android:id="@+id/time_input"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="실종/발견 시간을 입력해주세요."
            android:textSize="16sp"
            android:background="@drawable/info_edittext_rounded_corner_rectangle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:inputType="datetime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_title"/>

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="270dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/time_input"
            app:layout_constraintTop_toBottomOf="@+id/time_input"/>

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:paddingBottom="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/dog_register_frame"
            android:popupBackground="@drawable/spinner_frame"
            android:spinnerMode="dropdown"
            app:layout_constraintLeft_toLeftOf="@id/gender_text"
            app:layout_constraintTop_toBottomOf="@+id/gender_text" />

        <TextView
            android:id="@+id/born_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="출생연도"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="270dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/gender_spinner"
            app:layout_constraintTop_toBottomOf="@+id/gender_spinner"/>


        <Spinner
            android:id="@+id/born_spinner"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/dog_register_frame"
            android:popupBackground="@drawable/spinner_frame"
            android:spinnerMode="dropdown"
            android:dropDownWidth="328dp"
            app:layout_constraintLeft_toLeftOf="@id/born_text"
            app:layout_constraintTop_toBottomOf="@+id/born_text"
            />

        <TextView
            android:id="@+id/content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세 정보"
            app:layout_constraintStart_toStartOf="@+id/Dialog_title"
            app:layout_constraintTop_toBottomOf="@+id/born_spinner"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/content_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="상세정보를 입력해주세요."
            android:textSize="16sp"
            android:background="@drawable/info_edittext_rounded_corner_rectangle"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/content_title"
            app:layout_constraintStart_toStartOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/lost_image_area"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:src="@drawable/paws"
            app:civ_circle_background_color="#E0E0E0"
            app:civ_border_width="1dp"
            app:civ_border_color="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_input"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/click_upload_text"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:text="Click to upload"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@id/lost_image_area"
            app:layout_constraintRight_toRightOf="@id/lost_image_area"
            app:layout_constraintBottom_toBottomOf="@id/lost_image_area"
            app:layout_constraintTop_toTopOf="@id/lost_image_area" />


        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999999"
            app:layout_constraintTop_toBottomOf="@+id/click_upload_text"
            app:layout_constraintStart_toStartOf="@id/layout"
            app:layout_constraintEnd_toEndOf="@id/layout"
            android:layout_marginTop="20dp"/>

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#999999"
            app:layout_constraintStart_toStartOf="@id/layout"
            app:layout_constraintEnd_toEndOf="@id/layout"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            />

        <TextView
            android:id="@+id/yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/layout"
            app:layout_constraintEnd_toEndOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@id/layout" />

        <TextView
            android:id="@+id/no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/view2"
            app:layout_constraintEnd_toEndOf="@id/layout"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintBottom_toBottomOf="@id/layout" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>