<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homecontainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homepackage.HomeRecord">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/adding_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:visibility="visible"
            android:background="@drawable/add_dog"
            android:enabled="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:textSize="22dp"
            android:layout_marginTop="25dp"
            app:layout_constraintBottom_toTopOf="@id/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/naviwalk_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day" />

        <View
            android:id="@+id/oo"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginEnd="-4dp"
            android:background="@drawable/camera"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFFFFF"
            android:outlineProvider="none"
            android:translationZ="-1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oo"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/walk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text=""
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10sp"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile"
            app:layout_constraintTop_toBottomOf="@id/profile">

            <TextView
                android:id="@+id/walk_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15sp"
                android:text=""
                android:textColor="#767676"
                android:textSize="15dp"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/walk_age_slash"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:background="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/walk_age" />

            <TextView
                android:id="@+id/walk_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text=""
                android:textColor="#767676"
                android:textSize="15sp"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/walk_age_slash"/>

            <View
                android:id="@+id/walk_breed_slash"
                android:layout_width="1dp"
                android:layout_height="18dp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:background="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/walk_breed" />

            <TextView
                android:id="@+id/walk_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text=""
                android:textColor="#767676"
                android:textSize="15sp"
                android:textStyle="normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/walk_breed_slash" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pet_select_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:visibility="invisible"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/info_box"
            app:layout_constraintStart_toStartOf="@id/profile"
            app:layout_constraintEnd_toEndOf="@id/profile">

            <TextView
                android:id="@+id/pet_select_text"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="12dp"
                android:text="반려견선택"
                android:textSize="15.5dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/pet_select_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dropDownWidth="100dp"
                android:spinnerMode="dialog"
                app:layout_constraintBottom_toBottomOf="@id/pet_select_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/pet_select_text"
                app:layout_constraintTop_toTopOf="@id/pet_select_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:padding="20sp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@id/oo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/walk_box"
                android:layout_width="311dp"
                android:layout_height="78dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/walk_box"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/walk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="산책"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/walk_line"
                    android:layout_width="2dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:background="#FCCE65"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/walk_text"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/walk_jum2"
                    android:layout_width="13dp"
                    android:layout_height="3dp"
                    android:background="@drawable/walk_elipse"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/walk_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/walk_jum1"
                    android:layout_width="13dp"
                    android:layout_height="3dp"
                    android:background="@drawable/walk_elipse"
                    app:layout_constraintBottom_toBottomOf="@id/walk_number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/walk_line"
                    app:layout_constraintTop_toTopOf="@id/walk_number" />

                <ImageView
                    android:id="@+id/walk_jum3"
                    android:layout_width="13dp"
                    android:layout_height="3dp"
                    android:background="@drawable/walk_elipse"
                    app:layout_constraintBottom_toBottomOf="@id/walk_range"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/walk_line"
                    app:layout_constraintTop_toTopOf="@id/walk_range" />


                <TextView
                    android:id="@+id/walk_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="시간"
                    android:textColor="#767676"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/walk_jum2"
                    app:layout_constraintStart_toStartOf="@id/walk_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/walk_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="횟수"
                    android:textColor="#767676"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/walk_time"
                    app:layout_constraintEnd_toStartOf="@id/walk_jum3"
                    app:layout_constraintStart_toStartOf="@id/walk_line" />

                <TextView
                    android:id="@+id/walk_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:text="거리"
                    android:textColor="#767676"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/walk_jum3"
                    app:layout_constraintStart_toStartOf="@id/walk_line"
                    app:layout_constraintTop_toBottomOf="@id/walk_time" />


                <TextView
                    android:id="@+id/walk_time_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="3분"
                    android:textColor="#767676"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/walk_jum2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/walk_number_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="1회"
                    android:textColor="#767676"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/walk_time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/walk_jum1" />

                <TextView
                    android:id="@+id/walk_range_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="13m"
                    android:textColor="#767676"
                    android:textSize="15.5dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/walk_jum1"
                    app:layout_constraintTop_toBottomOf="@id/walk_time" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>





        <Button
            android:id="@+id/walkBtn"
            android:layout_width="187dp"
            android:layout_height="40dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/gowalk_button"
            android:elevation="0dp"
            android:visibility="invisible"
            android:enabled="false"
            android:text="산책하러가기"
            android:textColor="#FF8000"
            android:textSize="15.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="187dp"
            android:layout_height="40dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/gowalk_button"
            android:elevation="4dp"
            android:visibility="visible"
            android:text="내 반려견 등록하기"
            android:textColor="#FF8000"
            android:textSize="15.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>