<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/tenradius_shape"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="10dp">
    <!--날짜 레이아웃-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:gravity="center">

        <TextView
            android:id="@+id/history_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Today"
            android:gravity="center"
            android:textSize="14dp" />

    </LinearLayout>
    <!--칼로리 레이아웃-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/history_cal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="175.6"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="kcal"
            android:textSize="14dp" />

    </LinearLayout>
    <!--시간 레이아웃-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:gravity="center">
        <TextView
            android:id="@+id/history_hour"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="00"
            android:gravity="center"
            android:textSize="14dp" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:textSize="14dp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/history_minutes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="00"
            android:gravity="center_vertical"
            android:textSize="14dp" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:text=":"
            android:textSize="14dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/history_sec"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="00"
            android:gravity="center"
            android:textSize="14dp" />
    </LinearLayout>

    <!--    작성버튼 레이아웃-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/feedWriteIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/writepencil">

        </ImageView>

    </LinearLayout>


    <!--    <LinearLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:layout_weight="1"-->
    <!--            android:gravity="center">-->

    <!--    </LinearLayout>-->


</LinearLayout>